<section class="intro">
    
        <h1><%= config.title %></h1>
        <h4><%= config.subtitle %></h4> 
         <a href="#news"><i class="large material-icons">arrow_downward</i></a>
         
    
</section >



<div class="grid-container" id="news">
        
    <div class="recent" > 
        <% page.posts.each(function(item){ %>
            <%- partial('_partial/article-excerpt', {item: item}) %>
        <% }); %>
        <%- partial('_partial/pagination') %>
    </div>
   
    
    <div class="cat"> 
        <p>
            <% site.categories.sort('name').each(function(item){ %>
                <a href="<%- config.root %><%- item.path %>"> <%= item.name %></a>
            <% }); %>
        </p>
    </div>
    <div class="cloud"> 
      <p> 
            <% site.tags.sort('name').each(function(item){ %>
                <a href="<%- config.root %><%- item.path %>" style="font-size: <%- Math.min(item.posts.length * 2 + 13, 30) %>px"><%= item.name %></a>
            <% }); %>
    </p>
    </div>
</div>
    
    


