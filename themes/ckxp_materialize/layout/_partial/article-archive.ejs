<div class="archive-list" >
        
    
    
    <!-- Title -->
        <p class="blog-post-title-archive">
            <a href="<%- config.root %><%- item.path %>">
                <%- item.title || item.link%>
            </a>
        </p>
        
        <!-- Date and Author -->
        <!-- <span class="right-align" > -->
        <p class="blog-post-meta ">
            <%= item.date.format(config.date_format) %>
            <% if(item.author) { %>
                 von <%- item.author %>
            <% } %>
            <% if(item.city) { %>
                 in <%- item.city %>
            <% } %>
            </p>
        <!-- </p></span> -->

    </div>