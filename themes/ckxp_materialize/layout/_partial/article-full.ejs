<div class="grid-card-container">
    <div class="cardtitle">
        <h5><a href="<%- config.root %><%- item.path %>">
            <%- item.title || item.link%>
        </a></h5>
        <p> <%= item.date.format(config.date_format) %>
            <% if(item.author) { %>
                von <%- item.author %>
            <% } %>
        </p>
    </div>
    <div class="articlecontent">

        <p class="flow-text" ><%- item.content %></p>

        <% if(item.gallery) { %> 
        <section>
           
          <div class="carousel">
            <% item.gallery.forEach(function(pac) {%>
            <div class="carousel-item">
                <img class="materialboxed " width=250px src='<%- config.upload %><%- pac %>'>
            </div>
            <% }) %> 
          </div>
        </section>  
        <% } %> 

    </div>
    <div class="tag-post">
        <p><%- partial('article-tags', {item: item}) %></p>
    </div>
    <div class="cat-post">
        <p><%- partial('article-categories', {item: item}) %></p>
    </div>  

</div>